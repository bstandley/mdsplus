include @top_srcdir@/Makefile.inc

ifeq "@MINGW@" "yes"
	IMPLIB_MdsIpShr=@MAKELIBDIR@MdsIpShr.dll.a
	MAKE_IMPLIB_MdsIpShr=-Wl,--out-implib,$(IMPLIB_MdsIpShr)
	IMPLIB_MdsIpSrvShr=@MAKELIB@MdsIpSrvShr.dll.a
	MAKE_IMPLIB_MdsIpSrvShr=-Wl,--out-implib,$(IMPLIB_MdsIpSrvShr)
endif

COMPRESSION_SOURCES=adler32.c compress.c deflate.c infblock.c infcodes.c\
inffast.c inflate.c inftrees.c infutil.c trees.c uncompr.c zutil.c
COMPRESSION_OBJECTS = $(COMPRESSION_SOURCES:.c=.o)

COMPRESSION_SWITCH=

CFLAGS=@CFLAGS@ $(COMPRESSION_SWITCH) -Iudt4/src -Iudt4/udtc

CXXFLAGS=-Wno-deprecated -fPIC -finline-functions -fno-strict-aliasing -Iudt4/src -Iudt4/udtc @CFLAGS@ 
LIBS=@LIBS@ @LIBSOCKET@ @LIBNSL@ @LIBRESOLV@ @MEMCHKLIB@ @SOCKETLIB@

MdsIpShr    = @MAKESHLIBDIR@@LIBPRE@MdsIpShr@SHARETYPE@
MdsIpSrvShr = @MAKESHLIBDIR@@LIBPRE@MdsIpSrvShr@SHARETYPE@
MdsIpTunnel = @MAKESHLIBDIR@libMdsIpTunnel@SHARETYPE@
MdsIpTCP    = @MAKESHLIBDIR@libMdsIpTCP@SHARETYPE@
MdsIpTCPV6  = @MAKESHLIBDIR@libMdsIpTCPV6@SHARETYPE@
MdsIpSSH    = @MAKESHLIBDIR@libMdsIpSSH@SHARETYPE@
MdsIpHTTP   = @MAKESHLIBDIR@libMdsIpHTTP@SHARETYPE@
MdsIpUDT    = @MAKESHLIBDIR@libMdsIpUDT@SHARETYPE@
MdsIpUDTV6  = @MAKESHLIBDIR@libMdsIpUDTV6@SHARETYPE@

ifeq "@SHARETYPEMOD@" "@SHARETYPE@"
	modules =
else
	modules = @MAKESHLIBDIR@@LIBPRE@MdsIpShr@SHARETYPEMOD@ 
endif

ifeq "@MDSIP_CONNECTIONS@" "yes"
MDSIP_CONNECTIONS = yes
LIB_SOURCES = MdsValue.c MdsPut.c MdsOpen.c MdsClose.c MdsSetDefault.c MdsEventAst.c\
	  MdsEventCan.c MdsDispatchEvent.c MdsSetCompression.c FreeMessage.c \
	  IdlApi.c SendMdsMsg.c GetMdsMsg.c FlipData.c FlipHeader.c GetAnswerInfo.c ClientType.c\
          MakeDescrip.c LoadIo.c vmshpwd.c ArgLen.c GetSetSettings.c DoMessage.c  \
	  LockAsts.c Connections.c MdsIpFree.c SendArg.c ConnectToMds.c DisconnectFromMds.c CloseConnection.c \
	 CheckClient.c ParseCommand.c

LIB_OBJECTS = $(LIB_SOURCES:.c=.o)

SERVER_LIB_SOURCES = ProcessMessage.c RemoveConnection.c 
SERVER_LIB_OBJECTS = $(SERVER_LIB_SOURCES:.c=.o)
SERVER_SOURCES = mdsip.c 
SERVER_OBJECTS = $(SERVER_SOURCES:.c=.o)
TCP_SOURCES = IoRoutinesTcp.c
TCP_OBJECTS = $(TCP_SOURCES:.c=.o)
TCPV6_SOURCES = IoRoutinesTcpv6.c
TCPV6_OBJECTS = $(TCPV6_SOURCES:.c=.o)
UDT4 = udt4/src
UDT4_SOURCES = udt4/src/api.cpp udt4/src/buffer.cpp udt4/src/cache.cpp udt4/src/ccc.cpp udt4/src/channel.cpp \
	udt4/src/common.cpp udt4/src/core.cpp udt4/src/epoll.cpp udt4/src/list.cpp udt4/src/md5.cpp \
	udt4/src/packet.cpp udt4/src/queue.cpp udt4/src/window.cpp\
	udt4/udtc/udtc.cpp
UDT4_OBJECTS=$(UDT4_SOURCES:.cpp=.o)
UDT_OBJECTS = IoRoutinesUdt.o  $(UDT4_OBJECTS)
UDTV6_OBJECTS = IoRoutinesUdtV6.o $(UDT4_OBJECTS)
TUNNEL_SOURCES = IoRoutinesTunnel.c
TUNNEL_OBJECTS = $(TUNNEL_SOURCES:.c=.o)
CLEAN_OBJECTS = $(COMPRESSION_OBJECTS) $(LIB_OBJECTS) $(TUNNEL_OBJECTS) $(TCP_OBJECTS) $(TCPV6_OBJECTS) $(UDT_OBJECTS) $(UDTV6_OBJECTS) $(SERVER_LIB_OBJECTS) $(SERVER_OBJECTS)
ALL_SOURCES = $(LIB_SOURCES) $(TUNNEL_SOURCES) $(TCP_SOURCES) $(SERVER_LIB_SOURCES) $(SERVER_SOURCES)
MDSIP_CLIENT_SSH = @MAKEBINDIR@mdsip-client-ssh
MDSIP_CLIENT_HTTP = @MAKEBINDIR@mdsip-client-http
MDSIP_SERVER_SSH = @MAKEBINDIR@mdsip-server-ssh
MDSIP_SERVER_HTTP = @MAKEBINDIR@mdsip-server-http

ifneq "@GLOBUS_FLAVOR@" ""

MdsIpGSI = @MAKESHLIBDIR@libMdsIpGSI@SHARETYPE@
ALL_SOURCES = $(ALL_SOURCES) $(GSI_SOURCES)
CLEAN_OBJECTS = $(COMPRESSION_OBJECTS) $(LIB_OBJECTS) $(TUNNEL_OBJECTS) $(TCP_OBJECTS)\
	$(TCPV6_OBJECTS) $(UDT_OBJECTS) $(UDTV6_OBJECTS)\
	 $(SERVER_LIB_OBJECTS) $(SERVER_OBJECTS) IoRoutinesGsi.o 
MDSIPSD = @MAKEBINDIR@mdsipsd

endif

else

LIB_SOURCES = mdsipshr.c mdsiputil.c vmshpwd.c mdsip_socket_io.c mdsip_parallel.c
LIB_OBJECTS = $(LIB_SOURCES:.c=.o)
SERVER_SOURCES = mdsip_u.c
SERVER_OBJECTS = $(SERVER_SOURCES:.c=.o)
CLEAN_OBJECTS = $(COMPRESSION_OBJECTS) $(LIB_OBJECTS) $(SERVER_OBJECTS)
ALL_SOURCES = $(LIB_SOURCES) $(SERVER_SOURCES)
MDSIP_UTIL = @MAKELIBDIR@libMdsIpUtil.a

endif


EXPORTS = mdsipshr.export

all : $(MAKEFILE_HEADER) \
      $(MdsIpShr) \
      $(modules) \
      $(MdsIpSrvShr) \
      $(MdsIpTunnel) \
      $(MdsIpTCP) \
      $(MdsIpTCPV6) \
      $(MdsIpUDT) \
      $(MdsIpUDTV6) \
      $(MdsIpGSI) \
      $(MdsIpSSH) \
      $(MdsIpHTTP) \
      $(MDSIP_CLIENT_SSH) \
      $(MDSIP_SERVER_SSH) \
      $(MDSIP_CLIENT_HTTP) \
      $(MDSIP_SERVER_HTTP) \
      $(MDSIPSD) \
      @MAKEBINDIR@ @MAKELIBDIR@ @MAKEETCDIR@ \
      @MAKEBINDIR@mdsiptest \
      @MAKEBINDIR@mdsip \
      @MAKEBINDIR@mdsipd \
      @MAKEBINDIR@mdsip_server \
      @MAKEETCDIR@mdsip.hosts \
      @MAKEBINDIR@mkdirhier \
      @MAKELIBDIR@@LIBPRE@MdsIpShr.a \
      $(MDSIP_UTIL)

depend:
	@makedepend -- $(CFLAGS) -- $(ALL_SOURCES)

clean :
	@ $(RM) $(CLEAN_OBJECTS)
	@ $(RM) so_locations
	@ $(RM) $(MdsIpShr)
	@ $(RM) @MAKELIBDIR@@LIBPRE@MdsIpShr.a
	@ $(RM) @MAKELIBDIR@libMdsIpUtil.a
	@ $(RM) @MAKEBINDIR@mdsiptest
	@ $(RM) @MAKEBINDIR@mdsip
	@ $(RM) @MAKEBINDIR@mdsipd
	@ $(RM) @MAKEBINDIR@mdsip_server
	@ $(RM) @MAKEBINDIR@mkdirhier
	@ $(RM) @MAKEETCDIR@mdsip.hosts
        ifdef MDSIP_CONNECTIONS
	@ $(RM) @MAKELIBDIR@@LIBPRE@MdsIpSrvShr@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpTunnel@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpTCP@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpTCPV6@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpUDT@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpUDTV6@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpSSH@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsIpHTTP@SHARETYPE@
        ifdef IMPLIB_MdsIpShr
	@ $(RM) $(IMPLIB_MdsIpShr)
	@ $(RM) $(IMPLIB_MdsIpSrvShr)
        endif
	@ $(RM) $(MDSIP_CLIENT_SSH)
	@ $(RM) $(MDSIP_SERVER_SSH)
	@ $(RM) $(MDSIP_CLIENT_HTTP)
	@ $(RM) $(MDSIP_SERVER_HTTP)
        ifdef IMPLIB_MdsIpShr
	@ $(RM) $(IMPLIB_MdsIpShr)
	@ $(RM) $(IMPLIB_MdsIpSrvShr)
        endif
        ifdef MdsIpGSI
	@ $(RM) $(MdsIpGSI)
	@ $(RM) $(MDSIPSD)
        endif
        endif

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755 $(MdsIpShr) @libdir@
	ifdef IMPLIB_MdsIpShr
	$(INSTALL) -m 755 $(IMPLIB_MdsIpShr)
	$(INSTALL) -m 755 $(IMPLIB_MdsIpSrvShr)
	endif
        ifdef modules
		$(INSTALL) -m 755  @MAKESHLIBDIR@@LIBPRE@MdsIpShr@SHARETYPEMOD@ @libdir@
        endif
	$(INSTALL) -m 755  @MAKEBINDIR@mdsip	@bindir@
	$(INSTALL) -m 755  @MAKEBINDIR@mdsipd	@bindir@
	$(INSTALL) -m 755  @MAKEBINDIR@mdsip_server @bindir@
	$(INSTALL) -m 755  @MAKEBINDIR@mkdirhier @bindir@
	if test "@SHARETYPE@" != ".a" ; then \
		$(INSTALL) -m 644  @MAKELIBDIR@@LIBPRE@MdsIpShr.a @libdir@; \
	fi;
ifndef MDSIP_CONNECTIONS
	if test "@SHARETYPE@" != ".a" ; then \
		$(INSTALL) -m 644  @MAKELIBDIR@libMdsIpUtil.a @libdir@; \
	fi;
endif
	if [ ! -d $(exec_prefix)/etc ] ; then \
                $(MKDIR_P) -m 755 $(exec_prefix)/etc; \
        fi;
	$(INSTALL) -m 755  mdsip.hosts $(exec_prefix)/etc
        ifdef MDSIP_CONNECTIONS
		$(INSTALL) -m 755 $(MdsIpSrvShr) @libdir@
		$(INSTALL) -m 755 $(MdsIpTunnel) @libdir@
		$(INSTALL) -m 755 $(MdsIpTCP) @libdir@
		$(INSTALL) -m 755 $(MdsIpUDT) @libdir@
		$(INSTALL) -m 755 $(MdsIpUDTV6) @libdir@ 
		$(INSTALL) -m 755 $(MdsIpSSH) @libdir@
		$(INSTALL) -m 755 $(MdsIpHTTP) @libdir@
		$(INSTALL) -m 755 $(MDSIP_CLIENT_SSH) @bindir@
		$(INSTALL) -m 755 $(MDSIP_SERVER_SSH) @bindir@
		$(INSTALL) -m 755 $(MDSIP_CLIENT_HTTP) @bindir@
		$(INSTALL) -m 755 $(MDSIP_SERVER_HTTP) @bindir@
          ifdef MdsIpGSI
		$(INSTALL) -m 755 $(MdsIpGSI) @libdir@
		$(INSTALL) -m 755 @MAKEBINDIR@mdsipsd @bindir@
          endif
        endif

@MAKEBINDIR@ :
	mkdir $@

@MAKEBINDIR@mdsiptest: t.c $(MdsIpShr)
	$(CC) -o $@ $(CFLAGS) @CC_LDFLAGS@ $< -L@MAKESHLIBDIR@ -lMdsIpShr -lMdsShr $(LIBS)

ifdef MDSIP_CONNECTIONS
MDSIP_EXTRALIB = -lMdsIpSrvShr
@MAKEBINDIR@mdsip: $(MdsIpSrvShr)
endif

@MAKEBINDIR@mdsip: $(MdsIpShr)
@MAKEBINDIR@mdsip: $(SERVER_OBJECTS)
	$(CC) -o $@ $(CFLAGS) @CC_LDFLAGS@ $(SERVER_OBJECTS) -L@MAKESHLIBDIR@ $(MDSIP_EXTRALIB) -lMdsIpShr -lMdsShr -lTreeShr -lTdiShr $(LIBS)

@MAKEBINDIR@mdsipd: mdsipd
	cp $< $@

@MAKEBINDIR@mdsip_server: mdsip_server
	cp $< $@

ifdef MDSIP_CONNECTIONS
MDSIPSHR_EXTRALIBS = -L@MAKESHLIBDIR@ -lMdsShr
endif

$(MdsIpShr): $(LIB_OBJECTS) $(COMPRESSION_OBJECTS)
	$(LD) -o $@ @LINKSHARED@ $^ $(MDSIPSHR_EXTRALIBS) $(LIBS) $(LDFLAGS) $(MAKE_IMPLIB_MdsIpShr)

@MAKELIBDIR@@LIBPRE@MdsIpShr.a : $(LIB_OBJECTS)
	$(AR) -cr $@ $^
	$(RANLIB) $@

$(modules): $(LIB_OBJECTS) $(COMPRESSION_OBJECTS)
	$(LD) -o $@ @LINKMODULE@ $(OBJECTS) $(LIBS) $(LDFLAGS)

$(MDSIP_UTIL) : mdsiputil.o mdsip_socket_io.o mdsip_parallel.o $(COMPRESSION_OBJECTS)
	$(AR) -cr $@ $^
	$(RANLIB) $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKEETCDIR@ :
	mkdir @MAKEETCDIR@

@MAKEETCDIR@mdsip.hosts : mdsip.hosts
	cp $< $@

@MAKEBINDIR@mkdirhier : mkdirhier
	cp $< $@

$(MdsIpSrvShr): $(SERVER_LIB_OBJECTS) $(MdsIpShr)
	$(LD) -o $@ @LINKSHARED@ $(SERVER_LIB_OBJECTS) -L@MAKESHLIBDIR@ -lMdsIpShr -lMdsShr -lTreeShr -lTdiShr $(LIBS) $(LDFLAGS) $(MAKE_IMPLIB_MdsIpSrvShr)

$(MdsIpTunnel): $(TUNNEL_OBJECTS) $(MdsIpShr)
	$(LD) -o $@ @LINKSHARED@ $(TUNNEL_OBJECTS) -L@MAKESHLIBDIR@ -lMdsIpShr $(LIBS) $(LDFLAGS)

$(MdsIpTCP): $(TCP_OBJECTS) $(MdsIpShr)
	$(LD) -o $@ @LINKSHARED@ $(TCP_OBJECTS) -L@MAKESHLIBDIR@ -lMdsIpShr $(LIBS) $(LDFLAGS)

$(MdsIpTCPV6): $(TCPV6_OBJECTS) $(MdsIpShr)
	$(LD) -o $@ @LINKSHARED@ $(TCPV6_OBJECTS) -L@MAKESHLIBDIR@ -lMdsIpShr $(LIBS) $(LDFLAGS)

$(MdsIpUDT): $(UDT_OBJECTS) $(MdsIpShr)
	$(CXX) -o $@ @LINKSHARED@ $(UDT_OBJECTS) $(CXXFLAGS) -L@MAKESHLIBDIR@ -lMdsIpShr $(LIBS) $(LDFLAGS)

$(MdsIpUDTV6): $(UDTV6_OBJECTS) $(MdsIpShr)
	$(CXX) -o $@ @LINKSHARED@ $(UDTV6_OBJECTS) $(CXXFLAGS) -L@MAKESHLIBDIR@ -lMdsIpShr $(LIBS) $(LDFLAGS)

$(MdsIpSSH):
	ln -sf libMdsIpTunnel@SHARETYPE@ $@

$(MdsIpHTTP):
	ln -sf libMdsIpTunnel@SHARETYPE@ $@


$(MDSIP_CLIENT_SSH): mdsip-client-ssh
	cp $< $@

$(MDSIP_SERVER_SSH): mdsip-server-ssh
	cp $< $@

$(MDSIP_CLIENT_HTTP): mdsip-client-http
	cp $< $@

$(MDSIP_SERVER_HTTP): mdsip-server-http
	cp $< $@


