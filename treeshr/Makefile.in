include @top_srcdir@/Makefile.inc

CFLAGS=@CFLAGS@ @SRBINCLUDE@
LIBS=-L@MAKESHLIBDIR@ -lMdsShr @LIBS@ @SRBLIB@ @SOCKETLIB@

SOURCES = \
dummies.c \
TreeAddNode.c \
TreeAddTag.c \
TreeCallHook.c \
TreeCleanDatafile.c \
TreeCreatePulseFile.c \
TreeDeleteNode.c \
TreeDeletePulseFile.c \
TreeDoMethod.c \
TreeFindNode.c \
TreeFindTagWild.c \
TreeGetDbi.c \
TreeGetNci.c \
TreeGetRecord.c \
TreeGetSetShotId.c \
TreeOpen.c \
TreePerf.c \
TreePutRecord.c \
TreeRenameNode.c \
TreeRemoveNodesTags.c\
TreeSegments.c \
TreeSerializeNci.c \
TreeSetDbi.c \
TreeSetDefault.c \
TreeSetNci.c \
TreeThreadSafe.c \
TreeVerify.c \
RemoteAccess.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = TreeShr.exports

all : @MAKELIBDIR@ @MAKESHLIBDIR@ @MAKESHLIBDIR@libTreeShr@SHARETYPE@ @MAKELIBDIR@libTreeShr.a

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKESHLIBDIR@libTreeShr@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libTreeShr.a

depend:
	 @makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKESHLIBDIR@libTreeShr@SHARETYPE@ @libdir@
	if test @SHARETYPE@ != .a ; then \
		$(INSTALL) -m 644  @MAKELIBDIR@libTreeShr.a @libdir@; \
	fi;


@MAKESHLIBDIR@libTreeShr@SHARETYPE@ : $(OBJECTS) @EXPORTS_FILE@ 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) $(LIBS) $(LDFLAGS)

@MAKELIBDIR@libTreeShr.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

TreeShr.exports: TreeShr.def
	sed -e /LIBRARY/\;/\;/d TreeShr.def > $@
