include @top_srcdir@/Makefile.inc

SOURCES = \
      ServerDispatchAction.c\
      ServerFreeDispatchTable.c\
      ServerSetDetailProc.c\
      ServerAbortServer.c\
      ServerDispatchClose.c\
      ServerGetInfo.c\
      ServerSetLogging.c\
      ServerBuildDispatchTable.c\
      ServerDispatchCommand.c\
      ServerMonitorCheckin.c\
      ServerStartServer.c\
      ServerCloseTrees.c\
      ServerDispatchPhase.c\
      ServerStopServer.c\
      ServerCreatePulse.c\
      ServerFindServers.c\
      ServerSendMessage.c\
      ServerQAction.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = servershr.export

all: @MAKELIBDIR@ @MAKESHLIBDIR@libMdsServerShr@SHARETYPE@ @MAKELIBDIR@libMdsServerShr.a

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKESHLIBDIR@libMdsServerShr@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsServerShr.a

depend:
	 @makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKESHLIBDIR@libMdsServerShr@SHARETYPE@ @libdir@
	if test "@SHARETYPE@" != ".a" ; then \
		$(INSTALL) -m 644  @MAKELIBDIR@libMdsServerShr.a @libdir@; \
	fi;

@MAKESHLIBDIR@libMdsServerShr@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKESHLIBDIR@ -lMdsdcl -lTdiShr -lTreeShr -lMdsShr -lMdsIpShr $(LIBS) $(LDFLAGS) @SOCKETLIB@

@MAKELIBDIR@libMdsServerShr.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

