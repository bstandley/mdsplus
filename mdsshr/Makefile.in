include @top_srcdir@/Makefile.inc

CFLAGS=@CFLAGS@ @GLOBUS_CFLAGS@
LIBS=@LIBS@ @LIBDL@ @SOCKETLIB@ @NSLLIB@
ifeq "@MEMCHKLIB@" ""
	MDSMALLOC =
else
	MDSMALLOC = MdsMalloc.c
endif

ifeq "@MINGW@" "yes"
	IMPLIB=@MAKELIBDIR@MdsShr.dll.a
	MAKE_IMPLIB=-Wl,--out-implib,$(IMPLIB)
endif

SOURCES = \
        librtl.c \
        dasutil_routines4.c \
        mdsmsg.c \
        MDSprintf.c \
        MdsCmprs.c \
        MdsCompareXd.c \
        MdsCompress.c \
        MdsEvents.c \
        MdsGet1DxA.c \
        MdsGet1DxS.c \
        MdsGetSetShotId.c \
        MdsPk.c \
        MdsSerialize.c \
        MdsShrThreadSafe.c \
        MdsXdRoutines.c \
	$(MDSMALLOC) \
	mds_dsc_string.c \
	MdsFloatToTime.c \
	UdpEvents.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = MdsShr.exports

all : @MAKELIBDIR@ @MAKESHLIBDIR@ @MAKESHLIBDIR@@LIBPRE@MdsShr@SHARETYPE@ @MAKELIBDIR@@LIBPRE@MdsShr.a

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean :
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libMdsShr.a 
	@ $(RM) @MAKESHLIBDIR@libMdsShr@SHARETYPE@
ifdef IMPLIB
	@ $(RM) $(IMPLIB)
endif

install:
	if [ ! -d @libdir@ ] ; then \
                $(MKDIR_P) -m 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKESHLIBDIR@@LIBPRE@MdsShr@SHARETYPE@ @libdir@
ifdef IMPLIB
	$(INSTALL) -m 755 $(IMPLIB) @libdir@
endif
	if (test @SHARETYPE@ != .a) then \
		$(INSTALL) -m 644  @MAKELIBDIR@@LIBPRE@MdsShr.a @libdir@; \
	fi;

@MAKESHLIBDIR@@LIBPRE@MdsShr@SHARETYPE@ : $(OBJECTS) @EXPORTS_FILE@
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) $(LIBS) $(LDFLAGS) $(MAKE_IMPLIB)

@MAKELIBDIR@@LIBPRE@MdsShr.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKESHLIBDIR_RULE@

MdsShr.exports: MdsShr.def
	sed -e /LIBRARY/\;/\;/d MdsShr.def > $@
